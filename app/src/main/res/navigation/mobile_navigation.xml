<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_anim">

    <fragment
        android:id="@+id/navigation_anim"
        android:name="ua.shumov.homeworkframeworks.ui.animation.AnimationFragment"
        android:label="@string/title_anim"
        tools:layout="@layout/fragment_animation" />

    <fragment
        android:id="@+id/navigation_crashlytics"
        android:name="ua.shumov.homeworkframeworks.ui.crashlytics.CrashlyticsFragment"
        android:label="@string/title_crash"
        tools:layout="@layout/fragment_crashlytics" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="ua.shumov.homeworkframeworks.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>